            <div class="w-7 h-7 md:w-8 md:h-8 bg-orange-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 md:w-5 md:h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            @T("setup.step2Header")
            <span class="text-xs md:text-sm font-normal text-gray-500">(@(_currentAssistantIndex + 1)/@GetEnabledAssistants().Count)</span>
        </h2>

        <div class="bg-blue-50 border border-blue-200 rounded-xl p-3 md:p-4 mb-4 md:mb-6">
            <div class="flex">
                <svg class="w-4 h-4 md:w-5 md:h-5 text-blue-600 mt-0.5 mr-2 md:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                <div class="text-xs md:text-sm text-blue-800">
                    <p class="font-bold mb-1">@T("setup.configTipTitle")</p>
                    <p>@T("setup.claudeConfigDesc")</p>
                </div>
            </div>
        </div>

        <div class="space-y-3 md:space-y-4">
            @foreach (var envVar in _claudeEnvVars)
            {
                <div class="bg-gray-50 rounded-xl p-3 md:p-4 border border-gray-200">
                    <div class="flex flex-col md:flex-row md:items-end gap-2 md:gap-4">
                        <div class="flex-1 md:w-1/3">
                            <label class="block text-xs md:text-sm font-medium text-gray-700 mb-1 md:mb-2">@T("setup.envVarNameLabel")</label>
                            <input type="text" 
                                   @bind="envVar.Key"
                                   class="w-full px-3 md:px-4 py-2 md:py-2.5 border border-gray-300 rounded-xl focus:outline-none focus:ring-1 focus:ring-gray-500 text-sm"
                                   placeholder="@T("setup.envVarNamePlaceholderClaude")" />
                        </div>
                        <div class="flex-1 md:flex-[2]">
                            <label class="block text-xs md:text-sm font-medium text-gray-700 mb-1 md:mb-2">@T("setup.envVarValueLabel")</label>
                            <div class="flex gap-2">
                                <input type="text" 
                                       @bind="envVar.Value"
                                       class="flex-1 px-3 md:px-4 py-2 md:py-2.5 border border-gray-300 rounded-xl focus:outline-none focus:ring-1 focus:ring-gray-500 text-sm"
                                       placeholder="@GetEnvVarPlaceholder(envVar.Key)" />
                                <button @onclick="() => RemoveClaudeEnvVar(envVar)" 
                                        class="p-2 md:p-2.5 text-red-600 hover:bg-red-50 rounded-xl transition-all flex-shrink-0">
                                    <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <button @onclick="AddClaudeEnvVar" 
                    class="w-full py-2.5 md:py-3 border-2 border-dashed border-gray-400 rounded-xl hover:border-gray-600 hover:bg-gray-50 transition-all flex items-center justify-center gap-2 text-gray-700 text-sm">
                <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                @T("setup.addEnvVar")
            </button>
        </div>

        @RenderAssistantConfigButtons(isLast)
    };

    /// <summary>
    /// Codex 配置
    /// </summary>
    private RenderFragment RenderCodexConfig(bool isLast) => __builder =>
    {
        <h2 class="text-lg md:text-xl font-bold text-gray-800 mb-4 md:mb-6 flex items-center gap-2 flex-wrap">
            <div class="w-7 h-7 md:w-8 md:h-8 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 md:w-5 md:h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
            </div>
            @T("setup.step3Header")
