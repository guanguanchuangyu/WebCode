                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </button>
                }
                else
                {
                    <button @onclick="NextAssistantConfig" class="btn-primary flex-1 sm:flex-none">
                        @T("common.next")
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </button>
                }
            </div>
        </div>
    };

    private string GetAssistantCardClass(bool isSelected)
    {
        return isSelected 
            ? "bg-gray-50 border-gray-800" 
            : "bg-white border-gray-200 hover:border-gray-400";
    }

    private void StartAssistantConfig()
    {
        _currentAssistantIndex = 0;
        _currentStep = 3;
        StateHasChanged();
    }

    private void NextAssistantConfig()
    {
        _currentAssistantIndex++;
        StateHasChanged();
    }

    private void PrevAssistantConfig()
    {
        if (_currentAssistantIndex > 0)
        {
            _currentAssistantIndex--;
        }
        else
        {
            _currentStep = 2;
        }
        StateHasChanged();
    }
