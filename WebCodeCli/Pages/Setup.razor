    {
        <div class="flex flex-col sm:flex-row justify-between gap-3 mt-6 md:mt-8 pt-4 md:pt-6 border-t border-gray-200">
            <button @onclick="PrevAssistantConfig" class="btn-default order-2 sm:order-1">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                @T("common.previous")
            </button>
            <div class="flex gap-3 order-1 sm:order-2">
